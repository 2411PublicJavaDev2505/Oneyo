<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BoardMapper">
	<resultMap type="Board" id="boardResultMap">
		<id 	property="boardNo" 		column="BOARD_NO"/>
		<result property="memberId" 	column="MEMBER_ID"/>
		<result property="boardTitle" 	column="BOARD_TITLE"/>
		<result property="boardContent" column="BOARD_CONTENT"/>
		<result property="boardCount" 	column="BOARD_COUNT"/>
		<result property="boardDate" 	column="BOARD_DATE"/>
		<result property="delYn" 		column="DEL_YN"/>
	</resultMap>
	<insert id="insertBoard">
		insert into board values(SEQ_BOARD_NO.nextval, 'user01', 
		#{boardTitle}, #{boardContent}, default, default, default) 
	</insert>
	
	<select id="getTotalCount"  resultType="_int">
		select count(*) from board where DEL_YN = 'N'
	</select>
	<select id="selectAllBoard"  resultType="Board">
		select * from board where DEL_YN = 'N' 
	</select>
	<select id="selectOneBoard"  resultType="Board">
		select * from board where DEL_YN = 'N' and BOARD_NO=#{boardNo}
	</select>
</mapper>  